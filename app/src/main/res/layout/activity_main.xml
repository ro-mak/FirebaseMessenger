<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable
            name="user"
            type="ru.makproductions.firebasemessenger.model.User" />

        <variable
            name="viewmodel"
            type="ru.makproductions.firebasemessenger.viewmodel.MainActivityViewModel" />

    </data>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.name + ' ' + user.surname}"
            />
        <TextView
            android:layout_below="@id/user_name"
            android:id="@+id/user_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{user.status}"
            />
        <EditText
            android:id="@+id/message_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/user_name"
            />
        <TextView
            android:id="@+id/history_text_view"
            android:layout_below="@id/message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{user.message}"
            />
        <Button
            android:id="@+id/submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit"
            android:layout_below="@id/history_text_view"
            />
    </RelativeLayout>
</layout>